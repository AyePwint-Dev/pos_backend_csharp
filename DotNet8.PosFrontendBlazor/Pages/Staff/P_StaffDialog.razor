<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />
            New Staff
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@reqModel.StaffCode" Label="StaffCode" />
        <MudTextField @bind-Value="@reqModel.StaffName" Label="StaffName" />
        <MudTextField @bind-Value="@reqModel.DateOfBirth" Label="DateOfBirth" />
        <MudTextField @bind-Value="@reqModel.MobileNo" Label="MobileNo" />
        <MudTextField @bind-Value="@reqModel.Address" Label="Address" />
        <MudSelect @bind-Value="@reqModel.Gender" Label="Please choose Gender" Variant="MudBlazor.Variant.Text">
           @*  <MudSelectItem Value="@("Male")" />
            <MudSelectItem Value="@("Female")" />
            <MudSelectItem Value="@("Other")" /> *@

            @foreach(var item in StaticData.Gender())
            {
                <MudSelectItem Value="@(item.Key)">@item.Value</MudSelectItem>
            }
        </MudSelect>
        <MudTextField @bind-Value="@reqModel.Position" Label="Position" />
        <MudTextField InputType=InputType.Password @bind-Value="@reqModel.Password" Label="Password" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="SaveAsync">Save</MudButton>
    </DialogActions>
</MudDialog>
