@if (CustomerId == 0)
{
    <MudDialog Style="width: 550px">
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />
                New Customer
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudTextField @bind-Value="@requestModel.CustomerName" Label="Customer Name" />
            <MudTextField @bind-Value="@requestModel.MobileNo" Label="Mobile No" MaxLength="11" InputType="InputType.Telephone" />
            <MudSelect @bind-Value="@requestModel.Gender" Label="Please choose Gender" Variant="MudBlazor.Variant.Text">
                @foreach (var item in StaticData.Gender())
                {
                    <MudSelectItem Value="@(item.Key)">@item.Value</MudSelectItem>
                }
            </MudSelect>
            <MudDatePicker PickerVariant="PickerVariant.Dialog" Label="Date Of Birth" @bind-Date="requestModel.DateOfBirth" DateFormat="dd/MM/yyyy" />
            <MudTextField @bind-Value="@requestModel.StateCode" Label="State Code" />
            <MudTextField @bind-Value="@requestModel.TownshipCode" Label="Township Code" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" OnClick="SaveAsync">Save</MudButton>
        </DialogActions>
    </MudDialog>
}
else
{
    <MudDialog Style="width: 550px">
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />
                Edit Customer
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudTextField @bind-Value="@CustomerName" Label="Customer Name" />
            <MudTextField @bind-Value="@MobileNo" Label="Mobile No" MaxLength="11" InputType="InputType.Telephone" />
            <MudSelect @bind-Value="@Gender" Label="Please choose Gender" Variant="MudBlazor.Variant.Text">
                @foreach (var item in StaticData.Gender())
                {
                    <MudSelectItem Value="@(item.Key)">@item.Value</MudSelectItem>
                }
            </MudSelect>
            <MudDatePicker PickerVariant="PickerVariant.Dialog" Label="Date Of Birth" @bind-Date="DateOfBirth" DateFormat="dd/MM/yyyy" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" OnClick="SaveAsync">Update</MudButton>
        </DialogActions>
    </MudDialog>
}