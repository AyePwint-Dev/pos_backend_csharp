<MudDialog Style="width: 550px">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />
            New Customer
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@requestModel.CustomerName" Label="Customer Name" />
        <MudTextField @bind-Value="@requestModel.MobileNo" Label="Mobile No" />
        <MudTextField @bind-Value="@requestModel.Gender" Label="Gender" />
        <MudDatePicker PickerVariant="PickerVariant.Dialog" Label="Picker example" @bind-Date="DateOfBirth" DateFormat="dd/MM/yyyy"  />
        <MudTextField @bind-Value="@requestModel.StateCode" Label="State Code" />
        <MudTextField @bind-Value="@requestModel.TownshipCode" Label="Township Code" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="SaveAsync" Disabled="isDisabled">Save</MudButton>
    </DialogActions>
</MudDialog>