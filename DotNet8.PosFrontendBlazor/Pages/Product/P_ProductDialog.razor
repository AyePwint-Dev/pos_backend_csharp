<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />
            New Product
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@reqModel.ProductCode" Label="Code" />
        <MudTextField @bind-Value="@reqModel.ProductName" Label="Name" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="SaveAsync">Save</MudButton>
    </DialogActions>
</MudDialog>
