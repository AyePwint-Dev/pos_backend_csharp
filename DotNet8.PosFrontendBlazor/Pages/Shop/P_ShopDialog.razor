<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />
            New Shop
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@RequestModel.ShopCode" Label="ShopCode" />
        <MudTextField @bind-Value="@RequestModel.ShopName" Label="ShopName" />
        <MudTextField @bind-Value="@RequestModel.MobileNo" Label="MobileNumber" />
        <MudTextField @bind-Value="@RequestModel.Address" Label="Address" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="SaveAsync">Save</MudButton>
    </DialogActions>
</MudDialog>
